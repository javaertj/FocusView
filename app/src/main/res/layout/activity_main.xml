<com.ykbjson.view.MFocusView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/gg1"
        android:layout_width="380dp"
        android:layout_height="170dp"
        android:layout_margin="2dp"
        android:focusable="true"
        android:nextFocusRight="@+id/gg2"
        android:text="长长的按钮"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/gg2"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_gravity="bottom"
        android:layout_margin="2dp"
        android:focusable="true"
        android:nextFocusLeft="@+id/gg1"
        android:nextFocusRight="@+id/gg3"
        android:text="矮矮的按钮"
        android:textColor="@android:color/black"
        />

    <Button
        android:id="@+id/gg3"
        android:layout_width="180dp"
        android:layout_height="205dp"
        android:layout_alignParentRight="true"
        android:layout_margin="2dp"
        android:focusable="true"
        android:nextFocusLeft="@+id/gg2"
        android:text="胖胖的按钮"
        android:textColor="@android:color/black"
        />
</com.ykbjson.view.MFocusView>